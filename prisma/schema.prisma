// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Catégories d'actifs (Actions, Crypto, Obligations, etc.)
model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  color  String  @default("#4CAF50") // Couleur hex pour l'UI
  assets Asset[] // Relation one-to-many
}

// Actifs financiers (ex: AAPL, BTC, MSFT)
model Asset {
  id           Int           @id @default(autoincrement())
  name         String // Nom complet (ex: "Apple Inc.")
  ticker       String        @unique // Symbole boursier (ex: "AAPL")
  currentPrice Float         @default(0) // Prix actuel (peut être mis à jour)
  categoryId   Int // Clé étrangère vers Category
  category     Category      @relation(fields: [categoryId], references: [id])
  transactions Transaction[] // Relation one-to-many
  createdAt    DateTime      @default(now())
}

// Transactions d'achat/vente d'actifs
model Transaction {
  id           Int      @id @default(autoincrement())
  assetId      Int // Clé étrangère vers Asset
  asset        Asset    @relation(fields: [assetId], references: [id])
  type         String // 'BUY' ou 'SELL'
  quantity     Float // Nombre d'unités achetées/vendues
  pricePerUnit Float // Prix unitaire au moment de la transaction
  fee          Float    @default(0) // Frais de transaction
  date         DateTime @default(now())
  createdAt    DateTime @default(now())
}
